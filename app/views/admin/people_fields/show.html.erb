<h1>Custom People Fields</h1>
<%= render_errors(@fields) %>
<%= form_for :people_fields, method: 'PUT' do |f| %>
	<table class="table table-striped fields">
		<thead>
		  <tr>
		    <th>Name</th>
			<th>Type</th>
			<th>Required</th>
		  </tr> 
		</thead>
		<tbody>
		<% @fields.fields.each_with_index do |field, idx| %>
			<tr>
				<td><input type="text" name="fields[][name]" value="<%= field[:name] %>" class="form-control"></td>
				<td>
					<select name="fields[][data_type]" class="form-control">
						<option value="string" <% if field[:type] == 'string' %>selected<% end %>>String</option>
						<option value="number" <% if field[:type] == 'number' %>selected<% end %>>Number</option>
						<option value="boolean" <% if field[:type] == 'boolean' %>selected<% end %>>True/False</option>
						<option value="date" <% if field[:type] == 'date' %>selected<% end %>>Date</option>
					</select>
				</td>
				<td><input type="checkbox" name="fields[][required]" value="true" <% if field[:required] %>checked<% end %>> Required</td>
			</tr>
		<% end %>
		</tbody>
	</table>
    <%= f.submit class: 'btn btn-primary pull-right', value: "Save" %>
<% end %>